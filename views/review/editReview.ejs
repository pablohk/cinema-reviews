<h2>Edit comment</h2>
<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6" style="padding-top:40px">
      <form action="/review/edit/<%=item._id%>" method="POST">
        <div class="form-group">
          <label for="comment">comment</label>
          <textarea name="comment" class="form-control"><%=item.comment%></textarea>
        </div>
        <div class="form-group">
          <label for="name">rating</label>
          <input type="number" name="rating" class="form-control" min="0" max="5" value="<%=item.rating%>">
        </div>
      <button type="submit" class="btn btn-lg btn-success">Validate Changes</button>
      </form>
    </div>
  </div>
</div>
